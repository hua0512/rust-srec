# Database url
DATABASE_URL=sqlite:./srec.db

# JWT Configuration (required for authentication)
JWT_SECRET=your-secret-key-at-least-32-characters-long
JWT_ISSUER=rust-srec
JWT_AUDIENCE=rust-srec-api
# Token Expiration (optional, these have defaults)
ACCESS_TOKEN_EXPIRATION_SECS=3600          # 1 hour (default)
REFRESH_TOKEN_EXPIRATION_SECS=604800       # 7 days (default)
# Grace window to tolerate replay of a recently-rotated refresh token (optional)
# Helps with clients that accidentally send the old refresh token again due to concurrent refresh attempts/retries.
# Default: 0 (disabled)
REFRESH_TOKEN_REUSE_GRACE_SECS=10
# Password Policy (optional)
MIN_PASSWORD_LENGTH=8                       # default: 8

# API port
API_PORT=8080
# API bind address
API_BIND_ADDRESS=0.0.0.0
# Output directory for downloads
OUTPUT_DIR=./downloads
