# ============================================================
# Rust-Srec Environment Configuration
# ============================================================
# Copy this file to .env and configure the values

# ============================================================
# Timezone Configuration
# ============================================================
TZ=UTC

# ============================================================
# Docker Image Version
# ============================================================
VERSION=latest

# ============================================================
# Directory Paths (Host Volumes)
# ============================================================
DATA_DIR=./data
CONFIG_DIR=./config
OUTPUT_DIR=./output
LOG_DIR=./logs

# ============================================================
# Port Configuration
# ============================================================
API_PORT=12555
FRONTEND_PORT=15275

# ============================================================
# Backend Configuration
# ============================================================

# Logging level: trace, debug, info, warn, error
RUST_LOG=info

# Database connection string
DATABASE_URL=sqlite:///app/data/rust-srec.db

# ============================================================
# JWT Authentication (REQUIRED)
# ============================================================

# Secret key for signing JWT tokens (REQUIRED - generate a secure random string)
JWT_SECRET=3e0335ec2b1e2f14360d16588bb0e7cf96c9fb4c6823e7a3a4e194d62e7e60b1

# JWT issuer and audience identifiers
JWT_ISSUER=rust-srec
JWT_AUDIENCE=rust-srec-api

# ============================================================
# Token Expiration
# ============================================================

# Access token lifetime in seconds (default: 1 hour)
ACCESS_TOKEN_EXPIRATION_SECS=3600

# Refresh token lifetime in seconds (default: 7 days)
REFRESH_TOKEN_EXPIRATION_SECS=604800

# ============================================================
# Password Policy
# ============================================================

# Minimum password length
MIN_PASSWORD_LENGTH=8

# ============================================================
# Resource Limits (Docker)
# ============================================================
# CPU_LIMIT=4
# MEMORY_LIMIT=4G
# CPU_RESERVATION=1
# MEMORY_RESERVATION=512M

# ============================================================
# Proxy Configuration (Optional)
# ============================================================
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1,rust-srec

# ============================================================
# Frontend Configuration
# ============================================================

# Backend API URL (internal Docker network URL)
BACKEND_URL=http://rust-srec:8080

# Session cookie encryption secret (REQUIRED - min 32 characters)
SESSION_SECRET=184b659feea3a6ecc5732367013726d2c193f9ac49870d29256f852fd7f6a608

# Cookie secure flag: 'true' = always, 'false' = never, or leave empty for auto-detection
# Auto-detection uses X-Forwarded-Proto header (recommended when behind a reverse proxy)
COOKIE_SECURE=